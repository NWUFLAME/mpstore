.page-index {
  background: #333;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}
.page-index .am-tabs-scroll-left,
.page-index .am-tabs-scroll-right {
  background: none;
}
.page-index .am-tabs-content-wrap {
  display: none;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.my-tab {
  font-size: 28rpx;
}
.list {
  margin-top: 30rpx;
  background: #fff;
  border: #ddd solid 2rpx;
  border-radius: 10rpx;
}
.list-content {
  padding-bottom: 60rpx;
}
.list .row {
  display: flex;
  justify-content: space-between;
  align-items: cente;
  padding: 20rpx 30rpx;
  border-top: #ddd solid 2rpx;
}
.list .row:first-child {
  border-top: none;
}
.list .row .list-del {
  display: flex;
  align-items: center;
}
.list .row .text-line {
  text-decoration: line-through;
  color: grey;
}
.list-add {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-add .list-input {
  width: 100%;
  background: #fff;
  border: #ddd solid 2rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.list-add .list-input .input {
  display: block;
  padding: 0 20rpx;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.list-add .list-button {
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 26rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  background: #108ee9;
  margin-left: 20rpx;
  color: #fff;
  white-space: nowrap;
}
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}
.user-info .user-name {
  margin: 10px auto;
  font-weight: 600;
}
